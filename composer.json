{
    "name": "users-au/laravel-client",
    "type": "library",
    "description": "Users.au Laravel Client",
    "homepage": "https://github.com/users-au/laravel-client",
    "license": "MIT",
    "authors": [
        {
            "name": "David Shen",
            "email": "sica@qq.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "^8.0",
        "users-au/socialite-provider": "^1.1",
        "illuminate/support": "^5.0|^6.0|^7.0|^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/routing": "^5.0|^6.0|^7.0|^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/contracts": "^5.0|^6.0|^7.0|^8.0|^9.0|^10.0|^11.0|^12.0",
        "illuminate/database": "^5.0|^6.0|^7.0|^8.0|^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0|^10.0",
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^6.0|^7.0|^8.0|^9.0|^10.0",
        "laravel/socialite": "^5.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Usersau\\UsersauLaravelClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Usersau\\UsersauLaravelClient\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --no-coverage",
        "test-coverage": "phpunit --coverage-html build/coverage --coverage-clover build/logs/clover.xml",
        "cs-fix": "php-cs-fixer fix --config=.php-cs-fixer.php",
        "cs-check": "php-cs-fixer fix --config=.php-cs-fixer.php --dry-run --diff",
        "phpstan": "phpstan analyse --memory-limit=2G",
        "check": [
            "@test",
            "@cs-check",
            "@phpstan"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
              "Usersau\\UsersauLaravelClient\\UsersauLaravelClientServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
